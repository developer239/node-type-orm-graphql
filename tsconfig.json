{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDirs": [
      "node_modules",
      "src"
    ],
    "paths": {
      "~/*" : ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
